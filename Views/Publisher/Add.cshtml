@model BookStore.Models.Domain.Publisher

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Publisher</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="PublisherName">Publisher Name</label>
                    <input asp-for="PublisherName" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="PublisherName"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"];
                    </div>
                }

                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Save</button>
                    <a href="/Publisher/GetAll" class="btn btn-primary">List</a>
                </div>
            </form>
        </div>
    </div>
</div>